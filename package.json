{
  "name": "workspace-to-text",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Your Name",
  "description": "Workspace Text Analyzer",
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "electron-store": "^10.0.0",
    "ignore": "^5.3.1",
    "mime-types": "^2.1.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.47",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.4.14",
    "wait-on": "^8.0.1"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:4000 && electron .\"",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron-build": "electron-builder --config.win.certificateFile= --config.win.certificatePassword= --publish=never",
    "build": "npm run react-build && npm run electron-build",
    "postinstall": "electron-builder install-app-deps"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
